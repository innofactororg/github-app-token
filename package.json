{
  "name": "github-action-get-app-token",
  "version": "1.0.1",
  "description": "Get a GitHub App Installation Token to impersonate a GitHub App",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc --newLine lf",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --no-cache",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/innofactororg/github-action-get-app-token.git"
  },
  "keywords": [
    "github",
    "actions",
    "app",
    "token"
  ],
  "author": "Innofactor Plc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/innofactororg/github-action-get-app-token/issues"
  },
  "homepage": "https://github.com/innofactororg/github-action-get-app-token#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/auth-app": "^6.0.0",
    "@octokit/request": "^8.1.0",
    "ensure-error": "^4.0.0",
    "is-base64": "^1.1.0"
  },
  "devDependencies": {
    "@types/is-base64": "^1.1.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^16.18.38",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.45.0",
    "eslint-config-standard-with-typescript": "^36.1.0",
    "eslint-plugin-github": "^4.9.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.1",
    "jest-circus": "^29.6.1",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
